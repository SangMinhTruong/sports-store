
<!DOCTYPE html>
<html>
<head>
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/css/bootstrap-grid.css" rel="stylesheet" />
    <script src="~/lib/jquery/core.js"></script>
    <script src="~/lib/jquery/jquery.js"></script>
    <link rel="stylesheet" asp-href-include="/lib/font-awesome/css/*.css" />
    <title>SportsStore</title>
</head>
<body>
    <div class="navbar navbar-dark bg-dark" role="navigation">
        <div class="container-fluid ">
            <div class="col-8">
                <a class="navbar-brand" href="#">SPORTS STORE</a>
            </div>
            <div class="col text-right">
                @await Component.InvokeAsync("CartSummary")
            </div>
            <div class="col-auto text-right">
                <a class="btn btn-sm btn-primary"
                   asp-action="Login" asp-controller="Product">Admin Login</a>
            </div>
        </div>
    </div>
    <div class="row m-1 p-1">
        <div id="categories" class="col-3">
            @await Component.InvokeAsync("NavigationMenu")
        </div>
        <div class="col-9">
            @RenderBody()
        </div>
    </div>
</body>
</html>