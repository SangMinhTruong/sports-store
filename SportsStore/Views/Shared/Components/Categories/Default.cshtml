@model CategoriesViewModel

<div id="navigation">
    <!-- container -->
    <div class="container">
        <div id="responsive-nav">
            <!-- category nav -->
            <div class="category-nav @(Model.IsExpanded ?? false ? "" : "show-on-click")">
                <span class="category-header">Categories <i class="fa fa-list"></i></span>
                <ul class="category-list">
                    @foreach (var category in Model.Categories)
                    {
                        <li class="dropdown side-dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">@category<i class="fa fa-angle-right"></i></a>
                            <div class="custom-menu">
                                <div class="row">
                                    <div class="col-md-4">
                                        <ul class="list-links">
                                            <li>
                                                <h3 class="list-links-title">Brands</h3>
                                            </li>
                                            @foreach (var brand in Model.BrandsOfCategory[category])
                                            {
                                                <li><a asp-controller="Products" asp-action="Index"
                                                       asp-route-category="@category"
                                                       asp-route-brand="@brand">@brand</a></li>
                                            }
                                            <li><a asp-controller="Products" asp-action="Index"
                                                    asp-route-category="@category">All Brands</a></li>
                                        </ul>   
                                        <hr class="hidden-md hidden-lg">
                                    </div>
                                </div>
                                <div class="row hidden-sm hidden-xs">
                                    <div class="col-md-12">
                                        <hr>
                                        <a class="banner banner-1" href="#">
                                            <img src="~/images/banner05.jpg" alt="">   
                                            <div class="banner-caption text-center">
                                                <h2 class="white-color">NEW COLLECTION</h2>
                                                <h3 class="white-color font-weak">HOT DEAL</h3>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </li>
                    }
                    <li><a asp-controller="Products" asp-action="Index">View All</a></li>
                </ul>
            </div>
            <!-- /category nav -->
        </div>
    </div>
    <!-- /container -->
</div>

