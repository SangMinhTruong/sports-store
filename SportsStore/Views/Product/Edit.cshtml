
@model ProductsEditViewModel
@{
    ViewBag.Title = "Edit Product";
    Layout = "_AdminLayout";
}
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for=@Model.Product.ProductID />
    <div class="form-group m-2">
        <label asp-for=@Model.Product.Name></label>
        @*Show validation message tag helpers next to the problem element*@
        <div><span asp-validation-for=@Model.Product.Name class="text-danger"></span></div>
        <input asp-for=@Model.Product.Name class="form-control" />
    </div>
    <div class="form-group m-2">
        <label asp-for=@Model.Product.Description></label>
        <div><span asp-validation-for=@Model.Product.Description class="text-danger"></span></div>
        <textarea asp-for=@Model.Product.Description class="form-control"></textarea>
    </div>
    <div class="form-group m-2">
        <label asp-for=@Model.Product.Category></label>
        <div><span asp-validation-for=@Model.Product.Category class="text-danger"></span></div>
        <input asp-for=@Model.Product.Category class="form-control" />
    </div>
    <div class="form-group m-2">
        <label asp-for=@Model.Product.Price></label>
        <div><span asp-validation-for=@Model.Product.Price class="text-danger"></span></div>
        <input asp-for=@Model.Product.Price class="form-control" />
    </div>
    <div class="form-group m-2">
        <label asp-for=@Model.Product.ImportPrice></label>
        <div><span asp-validation-for=@Model.Product.ImportPrice class="text-danger"></span></div>
        <input asp-for=@Model.Product.ImportPrice class="form-control" />
    </div>
    <input type="hidden" asp-for=@Model.ReturnUrl
       value="@Model.ReturnUrl" />
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a href=@Model.ReturnUrl class="btn btn-secondary">Cancel</a>
    </div>
</form>