@{
}
@model Employee
@{
    ViewBag.Title = "Edit Product";
    Layout = "_AdminLayout";
}
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="EmployeeID" />
    <div class="form-group m-2">
        <label asp-for="Name"></label>
        @*Show validation message tag helpers next to the problem element*@
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group m-2">
        <label asp-for="JoinDate">Join Date</label>
        <div><span asp-validation-for="JoinDate" class="text-danger"></span></div>
        <input type="date" asp-for="JoinDate" max="2100-12-31"
               min="1800-01-01" class="form-control">
    </div>
    <div class="form-group m-2">
        <label asp-for="Salary"></label>
        <div><span asp-validation-for="Salary" class="text-danger"></span></div>
        <input asp-for="Salary" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="List" class="btn btn-secondary">Cancel</a>
    </div>
</form>