@model ProductDetailsViewModel
@{
    ViewData["Title"] = "Product Page";
}

<!-- BREADCRUMB -->
<div id="breadcrumb">
    <div class="container">
        <ul class="breadcrumb">
            <li><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li><a asp-action="Index" asp-controller="Products">Products</a></li>
            <li><a asp-action="Index" asp-controller="Products"
                   asp-route-category="@Model.Product.Category">@Model.Product.Category</a></li>
            <li class="active">@Model.Product.Name</li>
        </ul>
    </div>
</div>
<!-- /BREADCRUMB -->
<!-- section -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <!--  Product Details -->
            <div class="product product-details clearfix">
                <div class="col-md-6">
                    <div id="product-main-view">
                        <div class="product-view">
                            <img src="~/images/main-product01.jpg" alt="">
                        </div>
                        <div class="product-view">
                            <img src="~/images/main-product02.jpg" alt="">
                        </div>
                        <div class="product-view">
                            <img src="~/images/main-product03.jpg" alt="">
                        </div>
                        <div class="product-view">
                            <img src="~/images/main-product04.jpg" alt="">
                        </div>
                    </div>
                    <div id="product-view">
                        <div class="product-view">
                            <img src="~/images/thumb-product01.jpg" alt="">
                        </div>
                        <div class="product-view">
                            <img src="~/images/thumb-product02.jpg" alt="">
                        </div>
                        <div class="product-view">
                            <img src="~/images/thumb-product03.jpg" alt="">
                        </div>
                        <div class="product-view">
                            <img src="~/images/thumb-product04.jpg" alt="">
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="product-body">
                        <div class="product-label">
                        </div>
                        <h2 class="product-name">@Model.Product.Name</h2>
                        <h3 class="product-price">@Model.Product.Price</h3>
                        <p><strong>Availability:</strong> @((Model.Product.Stock > 0) ? "In stock" : "Out of stock")</p>
