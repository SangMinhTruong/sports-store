@model SportsStore.Models.ImportOrder

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>ImportOrder</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlacementDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlacementDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WholesalerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WholesalerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WholesalerAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WholesalerAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WholesalerPhone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WholesalerPhone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImportedProducts)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Product Name</th>
                    <th>Quantity</th>
                    <th>Sum</th>
                </tr>
                @foreach (var item in Model.ImportedProducts)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sum)
                        </td>
                    </tr>
                }
            </table>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
