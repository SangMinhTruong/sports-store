@model CreateUserViewModel

@{
    ViewData["Title"] = "Create User";
}

<h1>Create</h1>

<h4>User</h4>
<hr />
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div>
    <form asp-area="Employee"
          asp-controller="Administration"
          asp-action="CreateUser"
          method="post">
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email"
                   class="form-control col-8" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password"
                   class="form-control col-8" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword"
                   class="form-control col-8" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="form-group col-4">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName"
                       class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group col-4">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName"
                       class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Address">Address</label>
            <input asp-for="Address"
                   class="form-control col-8" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber">Phone Number</label>
            <input asp-for="PhoneNumber"
                   class="form-control col-8" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Roles</label>
            @if (Model.SelectedRoles.Any())
            {
                @foreach (var item in Model.SelectedRoles)
                {
                    <div class="form-check">
                        <input asp-for="@Model.SelectedRoles[item.Key]" class="form-check-input" />
                        <label class="form-check-label" asp-for="@Model.SelectedRoles[item.Key]">
                            @item.Key
                        </label>
                    </div>
                }
            }
        </div>
        <div class="form-group">
            <label asp-for="HireDate">Hire Date</label>
            <input asp-for="HireDate"
                   class="form-control col-8" />
            <span asp-validation-for="HireDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Salary">Salary</label>
            <input asp-for="Salary"
                   class="form-control col-8" />
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>

<div class="mt-3 mb-5">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
