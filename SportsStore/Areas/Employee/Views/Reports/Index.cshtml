@{
    ViewData["Title"] = "Reports";
}

<h1>Reports</h1>
<form class="mt-3" asp-area="Employee" asp-controller="Reports" asp-action="MonthReport">
    <label style="font-size: 18px;">Report Month:</label>
    <div class="input-group">
        <input type="text" class="form-control date" id="date-month"
               value="@DateTime.Now.ToString("MM/yyyy")" name="dateInput">
        <div class="input-group-append">
            <button class="btn btn-primary" type="submit">Create Report</button>
        </div>
    </div>
</form>

<form class="mt-3" asp-area="Employee" asp-controller="Reports" asp-action="YearReport">
    <label style="font-size: 18px;">Report Year:</label>
    <div class="input-group">
        <input type="text" class="form-control date" id="date-year" 
               value="@DateTime.Now.ToString("yyyy")" name="dateInput">
        <div class="input-group-append">
            <button class="btn btn-primary" type="submit">Create Report</button>
        </div>
    </div>
</form>