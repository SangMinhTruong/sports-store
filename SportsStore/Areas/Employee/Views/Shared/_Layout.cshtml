<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sports Store</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand"
                    asp-area="Employee"
                    asp-controller="Home"
                    asp-action="Index">SportsStore Staff</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-0">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-area="Employee"
                                   asp-controller="Home"
                                   asp-action="Index"
                                   asp-route-id="@SignInManager.UserManager.GetUserId(User)">
                                    @User.Identity.Name
                                </a>
                            </li>
                            <li class="nav-item">
                                <form method="post" 
                                      asp-area=""
                                      asp-controller="Accounts" 
                                      asp-action="Logout">
                                    <button type="submit"
                                            class="btn nav-link text-dark">
                                        Logout
                                    </button>
                                </form>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark"
                                asp-area="Employee"
                                asp-controller="Home"
                                asp-action="Index">
                                Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark"
                                asp-area="Employee"
                                asp-controller="Home"
                                asp-action="Privacy">
                                Privacy
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark"
                                asp-area="Employee"
                                asp-controller="Home"
                                asp-action="About">
                                About
                            </a>
                        </li>
                        @if ((await authorizationService.AuthorizeAsync(User, "EmployeePolicy")).Succeeded)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-area="Employee"
                                   asp-controller="Products"
                                   asp-action="Index">
                                    Products
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-area="Employee"
                                   asp-controller="Orders"
                                   asp-action="Index">
                                    Orders
                                </a>
                            </li>
                        }
                        @if ((await authorizationService.AuthorizeAsync(User, "AdminPolicy")).Succeeded)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-area="Employee"
                                   asp-controller="Imports"
                                   asp-action="Index">
                                    Imports
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-area="Employee"
                                   asp-controller="Employees"
                                   asp-action="Index">
                                    Employees
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-area="Employee"
                                   asp-controller="Reports"
                                   asp-action="Index">
                                    Reports
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink"
                                   data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                    Admin
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item"
                                       asp-area="Employee" 
                                       asp-controller="Administration"
                                       asp-action="ListUsers">Users</a>
                                    <a class="dropdown-item" 
                                       asp-area="Employee" 
                                       asp-controller="Administration"
                                       asp-action="ListRoles">Roles</a>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Sports Store - <a asp-area="Employee"  asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
